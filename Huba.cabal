                       thrift >=0.9 && <0.10,
                       containers >=0.5 && <0.6,
                       bytestring >=0.10 && <0.11,
                       hashable >=1.2 && <1.3,
                       text >=1.1 && <1.2,
                       unordered-containers >=0.2 && <0.3,
                       vector >=0.10 && <0.11,
                       network >=2.5 && <2.6,
                       lens == 4.2
