                       containers >=0.5 && <0.6,
                       bytestring >=0.10 && <0.11,
                       hashable >=1.2 && <1.3,
                       text >=1.1 && <1.2,
                       unordered-containers >=0.2 && <0.3,
                       vector >=0.10 && <0.11,
                       network >=2.5 && <2.6,
                       async == 2.0.1.*,
                       random == 1.0.1.*,
                       random-shuffle == 0.0.4,
                       lens == 4.2,
                       hslogger == 1.2.4
  default-language:    Haskell2010

executable IngestorTestClient
  main-is:             IngestorTest.hs
  other-modules:       Shared.Thrift.Interface
  hs-source-dirs:      src/, test/, src/Shared/Thrift/Generated
  other-extensions:    OverloadedStrings, DeriveDataTypeable
